{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "DLL (Release)",
      "command": "g++",
      "args": [
        "--std=gnu++2a",
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}\\src\\*.cpp",
        "-I${workspaceFolder}\\include\\",
        "-o",
        "${workspaceFolder}\\rt.dll",
        "-O2",
        "-DNDEBUG",
        "-shared",
        "-Wl,--subsystem,windows"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: g++"
    },
    {
      "type": "cppbuild",
      "label": "EXE (Debug)",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}\\src\\*.cpp",
        "-I${workspaceFolder}\\include\\",
        "-o",
        "${workspaceFolder}\\rt.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: g++"
    },
    {
      "type": "cppbuild",
      "label": "EXE (Release)",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}\\src\\*.cpp",
        "-I${workspaceFolder}\\include\\",
        "-o",
        "${workspaceFolder}\\rt.exe",
        "-O2",
        "-DNDEBUG"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "compiler: g++"
    }
  ]
}
